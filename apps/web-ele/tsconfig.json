{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@vben/tsconfig/web-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "three/*": ["node_modules/three/*"]
    },
    "rootDir": "src",
    "types": ["vite/client", "@vben/types/global"]
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "plugins": [
    {
      "name": "volar"
    }
  ]
}
